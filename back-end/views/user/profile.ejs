
<%- include('./../layouts/_head') %>
<body>
  <%- include('./../layouts/_navbar') %>
  <%- include('./../layouts/_page-header') %>
  <div class="container-fluid p-5">
    <div class="row">
      <div class="col-md-4">
        <ul class="list-group list-group-flush">
          <%- include('./_sidebar') %>
        </ul>
      </div>
      <div class="col-md-8">
        <form >
          <div class="form-group w-100">
            <label for="username" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" value="<%- user.name %>" class="form-control" id="username">
            </div>
          </div>
          <div class="form-group w-100">
            <label for="email"  class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="email" value="<%- user.email %>" class="form-control" id="email">
            </div>
          </div>
            <button type="button" class="btn btn-warning ml-4">Save All</button>
        </form>
      </div>
    </div>
  </div>
  <%- include('./../layouts/_footer') %>
  <%- include('./../layouts/_scripts') %>
</body>
</html>
